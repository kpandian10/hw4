<!DOCTYPE html>
<!DOCTYPE html>
<html>
  <head>
    <title>Travel Log Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <body class="pt-4">
    <!-- Top Bar -->
    <div class="container">
      <div class="row justify-content-between mb-2">
        <!-- Left-Aligned Home Link -->
        <div class="col-auto">
          <a href="/places" class="btn btn-default">Home</a>
        </div>

        <!-- Right-Aligned User Links -->
        <div class="col-auto text-end">
          <% @user = User.find_by({ "id" => session["user_id"] }) %>
          <% if @user == nil %>
            <a href="/users/new" class="btn btn-default">Sign Up</a>
            <a href="/login" class="btn btn-default">Login</a>
          <% else %>
            Logged in as: <%= @user["username"] %>
            |
            <a href="/logout" class="btn btn-default">Logout</a>
          <% end %>
        </div>
      </div>

      <!-- Flash Messages -->
      <% if flash["notice"] %>
        <div>
          <%= flash["notice"] %>
        </div>
      <% end %>

      <% if flash["alert"] %>
        <div>
          <%= flash["alert"] %>
        </div>
      <% end %>

      <!-- Page Title -->
      <div class="row">
        <div class="col">
          <h1 class="display-6 mb-4">Travel Log</h1>
        </div>
      </div>

      <!-- Main Content -->
      <%= yield %> <!-- This renders content from individual views -->
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

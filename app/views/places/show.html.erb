<div class="container mt-4">
 
  <!-- Place Name -->
  <h1><%= @place["name"] %></h1>

  <!-- New Post Button -->
  <div class="mb-4">
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </div>

  
  <div class="row">
  <% for entry in @entries %>
    <!-- Each entry takes up 1/3 of the row on medium+ screens -->
    <div class="col-md-4 mb-4 text-center">
      <!-- Entry Title and Date -->
      <h4><%= entry["title"] %></h4>
      <p><%= entry["occurred_on"] %></p>

      <!-- Image Section -->
      <div class="mb-3" style="height: 300px; overflow: hidden;">
        <% if entry.uploaded_image.attached? %>
          <!-- Uploaded Image -->
          <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid w-100 h-100" style="object-fit: cover;">
        <% else %>
          <!-- Placeholder Image -->
          <img src="<%= entry["image"] %>" class="img-fluid w-100 h-100" style="object-fit: cover;">
        <% end %>
      </div>

      <!-- Entry Description -->
      <p class="mt-3"><%= entry["description"] %></p>
    </div>
  <% end %>
  </div>


  
  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
</div>

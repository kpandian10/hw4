<div class="container mt-4">
 
  <!-- Place Name -->
  <h1><%= @place["name"] %></h1>

  <!-- New Post Button -->
  <div class="mb-4">
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </div>

  <!-- Entries Grid -->
  <div class="row">
    <% for entry in @entries %>
      <div class="col-md-4 mb-4"> <!-- Each entry takes up one-third of the row on medium+ screens -->
        <!-- Entry Title and Date -->
        <h4><%= entry["title"] %></h4>
        <p><%= entry["occurred_on"] %></p>

        <!-- Placeholder for Image -->
        <div style="height: 200px; background-color: #eaeaea; display: flex; justify-content: center; align-items: center;">
          <span>Image Placeholder</span>
        </div>

        <!-- Entry Description -->
        <p class="mt-3"><%= entry["description"] %></p>
      </div>
    <% end %>
  </div>

  <!-- Back to All Places Button -->
  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
</div>
